              auth="Container"
              scope="Shareable"
              type="javax.sql.DataSource"
              url="jdbc:oracle:thin:@XXX.XXX.XXX.XXX:1521:TEST"
              driverClassName="oracle.jdbc.driver.OracleDriver"
